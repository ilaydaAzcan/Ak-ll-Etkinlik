@model AkıllıEtkinlik.Models.Event

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Etkinlik Düzenle</title>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Etkinlik Düzenle</h2>

        @using (Html.BeginForm("EditEventAdmin", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label for="EtkinlikAdi">Etkinlik Adı</label>
                @Html.TextBoxFor(model => model.EtkinlikAdi, new { @class = "form-control", id = "EtkinlikAdi" })
            </div>

            <div class="form-group">
                <label for="Aciklama">Açıklama</label>
                @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", id = "Aciklama", rows = 5 })
            </div>

            <div class="form-group">
                <label for="Tarih">Tarih</label>
                @Html.TextBoxFor(model => model.Tarih, "{0:yyyy-MM-dd}", new { @class = "form-control", id = "Tarih", type = "date" })
            </div>

            <div class="form-group">
                <label for="Saat">Saat</label>
                @Html.TextBoxFor(model => model.Saat, new { @class = "form-control", id = "Saat", type = "time" })
            </div>

            <div class="form-group">
                <label for="Konum">Konum</label>
                @Html.TextBoxFor(model => model.Konum, new { @class = "form-control", id = "Konum" })
            </div>

            <div class="form-group">
                <label for="Kategori">Kategori</label>
                @Html.TextBoxFor(model => model.Kategori, new { @class = "form-control", id = "Kategori" })
            </div>

            <div class="form-group">
                <label for="Resim">Etkinlik Resmi</label>
                <input type="file" name="Resim" class="form-control-file" id="Resim" />
                @if (!string.IsNullOrEmpty(Model.ResimYolu))
                {
                    <img src="@Url.Content(Model.ResimYolu)" alt="Etkinlik Resmi" class="mt-3" style="max-width: 200px; max-height: 200px;" />
                }
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        }
    </div>
</body>
</html>
