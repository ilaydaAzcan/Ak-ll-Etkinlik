
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Şifre Yenileme Sayfası</title>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
        <div class="card p-4" style="width: 100%; max-width: 600px; box-shadow: 0px 5px 15px rgba(0,0,0,0.2); border-radius: 10px;">
            <h2 class="text-center mb-4">Şifre Yenileme Sayfası</h2>

            <!-- Hata Mesajları -->
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success text-center" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }
            else
            {
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger text-center" })
            }

            <form action="@Url.Action("ForgetPassword", "Home")" method="post">
                <div class="mb-3">
                    <label for="Email" class="form-label">Mail Adresinizi Giriniz</label>
                    <input type="email" id="Email" name="email" class="form-control rounded-pill px-3" placeholder="E-posta" required>
                </div>
                <div class="mb-3">
                    <label for="FirstName" class="form-label">Adınız</label>
                    <input type="text" id="FirstName" name="firstName" class="form-control rounded-pill px-3" placeholder="Ad" required>
                </div>
                <div class="mb-3">
                    <label for="LastName" class="form-label">Soyadınız</label>
                    <input type="text" id="LastName" name="lastName" class="form-control rounded-pill px-3" placeholder="Soyad" required>
                </div>
                <div class="mb-3">
                    <label for="PhoneNumber" class="form-label">Telefon Numaranız</label>
                    <input type="tel" id="PhoneNumber" name="phoneNumber" class="form-control rounded-pill px-3" placeholder="Telefon Numarası" required>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Yeni Şifre</label>
                    <input type="password" id="Password" name="password" class="form-control rounded-pill px-3" placeholder="Yeni Şifre" required>
                </div>
                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label">Yeni Şifre Tekrar</label>
                    <input type="password" id="ConfirmPassword" name="confirmPassword" class="form-control rounded-pill px-3" placeholder="Yeni Şifre Tekrar" required>
                </div>
                <button type="submit" class="btn btn-primary w-100 rounded-pill" style="background-color: #007bff;">Şifre Yenile</button>
            </form>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
